<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<p id="notice"><%= notice %></p>

<h1>Listing Feedings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Price</th>
      <th>Feeding pics</th>
      <th>Pax limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedings.each do |feeding| %>
      <tr>
        <td><%= feeding.name %></td>
        <td><%= feeding.user_id %></td>
        <td><%= feeding.date %></td>
        <td><%= feeding.time %></td>
        <td><%= feeding.place %></td>
        <td><%= feeding.latitude %></td>
        <td><%= feeding.longitude %></td>
        <td><%= feeding.price %></td>
        <% if feeding.feeding_pics.blank? == true %>
        <td> No Pics Available </td>
        <% else %>
        <td><%= image_tag feeding.feeding_pics.first.url(:thumb).to_s %></td>
        <% end %>
        <td><%= feeding.pax_limit %></td>
        <td><%= link_to 'Show', feeding %></td>
        <td><%= link_to 'Edit', edit_feeding_path(feeding) %></td>
        <td><%= link_to 'Destroy', feeding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  
  handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>



