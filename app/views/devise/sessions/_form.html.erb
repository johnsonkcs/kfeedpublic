<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class:"h4" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control fat" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"h4" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control fat" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="submit-field">
    <%= f.submit "Sign In", class:"btn btn-lg btn-success", id: "signsignbtn", style: "margin-bottom: 10px" %>
    <a href="/users/auth/facebook" class="btn btn-lg btn-primary" id="signfacebook" style="margin-bottom: 10px">
    <i class="fa fa-facebook"></i> Sign In with Facebook </a>
  </div>

  <div class="other-links" style="float: right;">
    <%= link_to "Forgot Password", new_user_password_path, class: "btn btn-lg btn-warning", id: "signsignbtn" %>
    <%= link_to "New User?", new_user_registration_path, class: "btn btn-lg btn-success", id: "signsignbtn" %>
  </div><br>
<% end %>
