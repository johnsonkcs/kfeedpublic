<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"h4" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class:"h4" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"h4" %>
    </div>
  <% end -%>

  <div class="submit-field">
    <%= f.submit "Sign in", class:"btn btn-lg btn-success" %>
    <a href="/users/auth/facebook" class="btn btn-lg btn-primary" id="signsignbtn">
    <i class="fa fa-facebook"></i> Sign In with Facebook </a>
  </div>

  <div class="other-links" style="float: right;">
    <%= link_to t(".forgot_password"), new_user_password_path, class: "btn btn-lg btn-warning", id: "signsignbtn" %>
    <%= link_to "New User?", new_user_registration_path, class: "btn btn-lg btn-success", id: "signsignbtn" %>
  </div>
<% end %>
